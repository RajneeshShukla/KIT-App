<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.ac.kit.kit_app.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="in.ac.kit.kit_app.MainActivity$PlaceholderFragment">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_scholarship"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="ScholarshipOnClickHandler"/>

                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_placement"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="SdcOnClickHandler"/>

                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_alimini"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageViewAluumini"
                    android:onClick="AluminiOnClickHandler"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_ieee"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView2"
                    android:onClick="IEEEOnClickHandler"/>

                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_patner"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="PatnerOnClickHandler"/>

                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_teachers_login"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="TeachersOnClickHandler"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_rank"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="RankOnClickHandler"/>

                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_kit_pay_fee"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="PayFeeOnClickHandler"/>

                <ImageView
                    android:layout_margin="18dp"
                    android:src="@drawable/ic_kit_news"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView"
                    android:onClick="NewsOnClickHandler"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
