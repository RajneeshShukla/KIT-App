<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sdc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="in.ac.kit.kit_app.SDCActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
           android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAlignment="center"
                android:text="KEY OBJECTIVES"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:text="@string/sdc_key_objectives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_dean_sdc_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_margin="0dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAlignment="center"
                android:text="TRAINERS"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:paddingTop="0dp"
                android:src="@drawable/ic_pdp_trainer_one"
                android:layout_width="match_parent"
                android:layout_height="304dp" />
            <ImageView
                android:layout_margin="0dp"
                android:src="@drawable/ic_pdp_trainer_two"
                android:layout_width="match_parent"
                android:layout_height="385dp" />
            <ImageView
                android:src="@drawable/ic_pdp_trainer_three"
                android:layout_width="match_parent"
                android:layout_height="94dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
